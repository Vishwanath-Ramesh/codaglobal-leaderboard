{
  "name": "server",
  "version": "1.0.0",
  "description": "A Backend application using NodeJS and ExpressJS",
  "main": "src/index.js",
  "scripts": {
    "babel": "babel src --out-dir lib",
    "lint": "eslint --ignore-path ../.gitignore .",
    "format": "prettier --ignore-path ../.gitignore --write .",
    "check-format": "prettier --list-different .",
    "validate": "yarn lint && yarn test && yarn build",
    "validate-parallel": "npm-run-all --parallel format lint test build",
    "test": "jest",
    "test:related": "jest --findRelatedTests",
    "test:report": "jest --coverage && serve ./coverage/lcov-report",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "setup": "yarn install && yarn validate",
    "build": "webpack --mode=production",
    "server": "nodemon ."
  },
  "keywords": [],
  "author": "Vishwanath R",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.9",
    "babel-loader": "^8.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "lint-staged": "^10.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "react-test-renderer": "^17.0.0",
    "test-data-bot": "^0.8.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "nodemon": "^2.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "**/*.+(js|jsx|ts|tsx|json|css)": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vishwanath-Ramesh/react-webpack-boilerplate.git"
  }
}
